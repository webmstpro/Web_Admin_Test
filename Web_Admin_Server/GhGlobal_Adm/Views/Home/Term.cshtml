
@{
    ViewData["Title"] = "Term";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-list"></span>약관 리스트
                <div class="pull-right action-buttons">
                    <div class="form-inline">
                        <div class="btn btn-primary" id="btnCreate" onclick="Create()">생성</div>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td>No</td>
                            <td>약관</td>
                            <td>날짜</td>
                            <td>상세</td>
                        </tr>
                    </thead>
                    <tbody id="List_Container">
                        <tr>
                            <td colspan="5">약관이 존재하지 않습니다.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-6">
                        <h6>
                            Total Count <span class="label label-info" id="Total">0</span>
                        </h6>
                    </div>
                    <div class="col-md-6">
                        <ul class="pagination pagination-sm pull-right" id="pageing">
                            <li class="disabled"><a href="#">«</a></li>
                            <li><a href="#">0</a></li>
                            <li class="disabled"><a href="#">»</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script id="UserCards_Tmpl" type="text/x-tmpl">
        <tr>
            <td>${gt_idx}</td>
            <td>${gt_type}</td>
            <td>${GetDate01(gt_date)}</td>
            <td>
                <div class="btn btn-danger" onclick="View('${gt_idx}')">상세</div>
            </td>
        </tr>
        <tr id="NoticeDetail_${gt_idx}" style="display: none;">
            <td colspan="5">
                <div>
                    <div class="btn btn-warning" onclick="Del('${gt_idx}')">삭제</div>
                    <div class="btn btn-primary" onclick="Edit('${gt_idx}')">수정</div>
                </div>
                <div>
                    <textarea class="form-control" id="termText_${gt_idx}" readonly="readonly" style="height: 200px;">${gt_term}</textarea>
                </div>
            </td>
        </tr>
    </script>

    <script id="NoticeCreate_Tmpl" type="text/x-jquery-tmpl">
        <form name="termForm" id="termForm" action="/" method="post">
            <input type="hidden" name="ad_idx" id="ad_idx" class="form-control" value="@ViewBag.ad_idx" readonly="readonly" />
            <input type="hidden" name="ad_ip" id="ad_ip" class="form-control" value="@ViewBag.ad_ip" readonly="readonly" />
            <input type="hidden" name="gt_idx" id="gt_idx" class="form-control" value="${gt_idx}" readonly="readonly" />
            <input type="hidden" name="gt_Gtype" id="gt_Gtype" class="form-control" value="${gt_Gtype}" readonly="readonly" />
            <input type="hidden" name="gt_Lan" id="gt_Lan" class="form-control" value="1" readonly="readonly" />
            <input type="text" name="gt_type" id="gt_type" class="form-control" placeholder="Title" required data-msg-required="약관타입을 입력해주세요." value="${gt_type}" />
            <textarea name="gt_term" id="gt_term" class="form-control" placeholder="Content" required data-msg-required="내용을 입력해주세요." style="resize: none;  height: 300px;">${gt_term}</textarea>
            @*<select name="gn_Gtype" id="gn_Gtype" class="form-control" placeholder="Game" required data-msg-required="게임을 선택해주세요.">
                <option value="">게임선택</option>
                <option value="1" {{if gt_Gtype == 1}} selected{{/if}}>홀덤</option>
                <option value="2" {{if gt_Gtype == 2}} selected{{/if}}>오마하</option>
                <option value="3" {{if gt_Gtype == 3}} selected{{/if}}>블랙젝</option>
                <option value="4" {{if gt_Gtype == 4}} selected{{/if}}>바카라</option>
                <option value="5" {{if gt_Gtype == 5}} selected{{/if}}>룰렛</option>
            </select>*@
            <select name="gt_use" id="gt_use" class="form-control" placeholder="State" required data-msg-required="사용유무를 선택해주세요.">
                <option value="0" {{if gt_use == 0}} selected{{/if}}>사용</option>
                <option value="1" {{if gt_use == 1}} selected{{/if}}>삭제</option>
            </select>
        </form>
    </script>

    <script>
        $(function () {
            List(1);
        });

        function List() {

            pData = {
                "lan_idx": 1,
                "gg_Gtype": "Admin"
            }

            $.ajax({
                url: "@ViewBag.ApiUrl/Home/GetTerms",
                type: 'POST',
                data: pData,
                success: function (data) {
                    console.log(data)
                    if (data.length != 0) {
                        $("#List_Container").text("");
                        $("#UserCards_Tmpl").tmpl(data).appendTo("#List_Container");
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert("Error \n" + textStatus + " : " + errorThrown + "::" + jqXHR);
                }
            });
        }

        function View(idx) {
            $("#NoticeDetail_" + idx).toggle();
        }

        function Create() {

            var data = {
                "gt_idx": 0,
                "gt_term": "",
                "gt_type": "",
                "gt_Gtype": "",
                "gt_Lan": 1,
                "gt_use": 0
            }

            $("#PopupManage01_body").text("");
            $("#PopupManage01").modal("show");
            $("#PopupManage01_heading").text("약관 생성");
            $("#NoticeCreate_Tmpl").tmpl(data).appendTo("#PopupManage01_body");
        }

        $(document).on("click", "#btnPopup02", adSubmit);

        function adSubmit() {
            //GetAdMemCud
            if ($("#termForm").valid()) {
                $.ajax({
                    url: "@ViewBag.ApiUrl/Manage/SetTermCUD",
                    type: 'POST',
                    data: $("#termForm").serialize(),
                    success: function (data) {
                        alert(data.rVal);
                        if (data.rCnt == 0) {
                            location.reload();
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert("Login Local Error \n" + textStatus + " : " + errorThrown + ":" + jqXHR);
                        console.log(textStatus);
                        console.log(errorThrown);
                        console.log(jqXHR);
                    }
                });
            }
        }

        function Del(idx) {
            if (confirm("삭제하시겠습니까?")) {
                $.ajax({
                    url: "@ViewBag.ApiUrl/Manage/SetTermCUD",
                    type: 'POST',
                    data: { "gt_idx": idx, "gt_use": 1},
                    success: function (data) {
                        alert(data.rVal);
                        if (data.rCnt == 0) {
                            location.reload();
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert("Login Local Error \n" + textStatus + " : " + errorThrown + ":" + jqXHR);
                        console.log(textStatus);
                        console.log(errorThrown);
                        console.log(jqXHR);
                    }
                });
            }
        }

        function Edit(idx) {
            $.ajax({
                url: "@ViewBag.ApiUrl/Manage/GetTermDetail",
                type: 'POST',
                data: { "gt_idx": idx},
                success: function (data) {
                    console.log(data);
                    $("#PopupManage01_body").text("");
                    $("#PopupManage01").modal("show");
                    $("#PopupManage01_heading").text("약관 수정");
                    $("#NoticeCreate_Tmpl").tmpl(data).appendTo("#PopupManage01_body");
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert("Login Local Error \n" + textStatus + " : " + errorThrown + ":" + jqXHR);
                    console.log(textStatus);
                    console.log(errorThrown);
                    console.log(jqXHR);
                }
            });
        }

    </script>
}