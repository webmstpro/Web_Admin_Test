
@{
    ViewData["Title"] = "PlayCoinShop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-list"></span>PlayCoinShop
            </div>
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td>No</td>
                            <td>이름</td>
                            <td>코인</td>
                        </tr>
                    </thead>
                    <tbody id="List_Container">
                        <tr>
                            <td colspan="3">코인정보가 존재하지 않습니다.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-6">
                        <h6>
                            Total Count <span class="label label-info" id="Total">0</span>
                        </h6>
                    </div>
                    <div class="col-md-6">
                        <ul class="pagination pagination-sm pull-right" id="pageing">
                            <li class="disabled"><a href="#">«</a></li>
                            <li><a href="#">0</a></li>
                            <li class="disabled"><a href="#">»</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script id="UserCards_Tmpl" type="text/x-tmpl">
        <tr>
            <td>${PlayCoinIdx}</td>
            <td>${Name}</td>
            <td>${PlayCoin}</td>
        </tr>
    </script>

    <script>
        $(function () {
            List();
        });

        function List() {

            $.ajax({
                url: "@ViewBag.ApiUrl/Manage/GetPlayCoinShop",
                type: 'POST',
                success: function (data) {
                    if (data.length != 0) {
                        $("#List_Container").text("");
                        $("#UserCards_Tmpl").tmpl(data).appendTo("#List_Container");
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert("Error \n" + textStatus + " : " + errorThrown + "::" + jqXHR);
                }
            });
        }
    </script>
}